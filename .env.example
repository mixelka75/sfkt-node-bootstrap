# ========================================
# Bootstrap Node Configuration
# ========================================
# This is a FREE node with restricted access
# Only Telegram and basic services work
# YouTube, Instagram, Discord etc. are BLOCKED

# Node identification (leave empty for auto-registration)
NODE_ID=

# Node name (displayed in client apps)
NODE_NAME=Бесплатный сервер (ТОЛЬКО ТГ)

# Public hostname or IP address
NODE_HOSTNAME=free.example.com

# Public IP address
NODE_IP=1.2.3.4

# VPN port (usually 443)
NODE_PORT=443

# ========================================
# Location
# ========================================

NODE_COUNTRY=Russia
NODE_COUNTRY_CODE=RU
NODE_CITY=Moscow

# ========================================
# REALITY Keys
# ========================================
# Generate with: ./scripts/generate_reality_keys.sh

# Private key (keep secret!)
REALITY_PRIVATE_KEY=your-private-key-here

# Public key (for clients)
REALITY_PUBLIC_KEY=your-public-key-here

# Short ID
REALITY_SHORT_ID=your-short-id-here

# Shared UUID for all users (one UUID for everyone)
SHARED_UUID=your-shared-uuid-here

# ========================================
# SNI Masking
# ========================================
# Domain to mask VPN traffic as
NODE_SNI=max.ru

# ========================================
# Main Server Connection
# ========================================

# Main server URL (for health monitoring)
MAIN_SERVER_URL=https://sfkt.mxl.wtf

# Node API key (must match NODE_API_SECRET on main server)
NODE_API_KEY=your-node-api-secret-from-main-server

# ========================================
# Intervals (in seconds)
# ========================================

# Health check interval (default: 60 seconds)
HEALTH_CHECK_INTERVAL=60
